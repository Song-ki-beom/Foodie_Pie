<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:backgroundTint="@color/white"
    tools:context=".PostFragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/goToChat"
            android:layout_width="243dp"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:text="@string/go_to_chat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/divider_bottom"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginBottom="12dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/goToChat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <View
            android:id="@+id/divider_middle"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginBottom="84dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/divider_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/foodInformation"
            android:layout_width="349dp"
            android:layout_height="48dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:background="@color/design_default_color_background"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="@string/food_infor"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/divider_bottom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider_middle" />

        <View
            android:id="@+id/divider_top2"
            android:layout_width="409dp"
            android:layout_height="1dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/TitlleText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/DetailInfo"
            android:layout_width="331dp"
            android:layout_height="193dp"
            android:layout_marginBottom="40dp"
            android:text="TextView"
            android:textSize="17sp"
            app:layout_constraintBottom_toTopOf="@+id/divider_middle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TitlleText"
            android:layout_width="326dp"
            android:layout_height="44dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            android:textSize="22sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/DetailInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/Name"
            android:layout_width="216dp"
            android:layout_height="22dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="10dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/BuyDate"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/BuyDate"
            android:layout_width="216dp"
            android:layout_height="22dp"
            android:layout_marginEnd="26dp"
            android:layout_marginBottom="8dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/DueDate"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/DueDate"
            android:layout_width="216dp"
            android:layout_height="22dp"
            android:layout_marginEnd="25dp"
            android:layout_marginBottom="44dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/divider_top2"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/FoodImage"
            android:layout_width="136dp"
            android:layout_height="131dp"
            android:layout_marginStart="16dp"
            android:layout_marginBottom="30dp"
            app:layout_constraintBottom_toTopOf="@+id/divider_top2"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>