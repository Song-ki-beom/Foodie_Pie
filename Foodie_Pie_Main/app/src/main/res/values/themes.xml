<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Foodie_Pie_Main" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">#FF0000</item>
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
        <!--?attr/colorPrimaryVariant << 핸드폰 기본 컬러 -->
        <item name="android:actionOverflowButtonStyle">@style/OverFlowButton</item>
    </style>

    <style name="CustomTextView"  parent="@android:style/Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_marginRight">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingLeft">0dp</item>


    </style>

    <style name="OverFlowButton" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">#FF0000</item>
    </style>

    <style name="Theme.Foodie_Pie_Main.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Foodie_Pie_Main.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Foodie_Pie_Main.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MyApp" parent="Theme.AppCompat.Light.NoActionBar">
        ...
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownVerticalOffset">?attr/actionBarSize</item>
    </style>
</resources>